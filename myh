#!/bin/sh
#Colours Code
red="\033[00;31m"
RED="\033[01;31m"

green="\033[00;32m"
GREEN="\033[01;32m"

brown="\033[00;33m"
YELLOW="\033[01;33m"

blue="\033[00;34m"
BLUE="\033[01;34m"

purple="\033[00;35m"
PURPLE="\033[01;35m"

cyan="\033[00;36m"
CYAN="\033[01;36m"

white="\033[00;37m"
WHITE="\033[01;37m"
NC="\033[00m"
HOSTNAME=$(uname -n)
IP=$(ip addr | grep 'inet' | grep -v inet6 | grep -vE '127\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | grep -o -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' | head -1)

if [[ "$EUID" -ne 0 ]]; then
	echo "Sorry, you need to run this as root"
	exit 1
fi

if grep -qs "CentOS release 5" "/etc/redhat-release"; then
	echo "CentOS 5 is too old and not supported"
	exit 2
fi

if [[ ! -e /etc/centos-release || -e /etc/redhat-release ]]; then
	echo ""
else
	echo "Looks like you aren't running this installer on CentOS 7"
	exit 3
fi
while :; do
	clear
	echo ""
	cat <<'EOF'
               \     /
               \\   //
                )\-/(
                /e e\
               ( =T= )
               /`---'\
          ____/ /___\ \
     \   /   '''     ```~~"--.,_
  `-._\ /                       `~~"--.,_
 ------>|                                `~~"--.,_
  _.-'/ \                            ___,,,---""~~``'
     /Myh\____,,,,....----""""~~~~````
EOF
	echo ""
	echo -e "${WHITE} Welcome ${YELLOW}${USER} ${WHITE}to the${blue} ${HOSTNAME}-${GREEN}${IP}"
	echo -e "${NC}"
	echo "   1) Install Nodejs "
	echo "   2) Install Meteor "
	echo "   3) Install MongoDB 3.4,3.6,4.0 "
	echo "   4) Install Mongo Studio "
	echo "   5) Install Rockmongo "
	echo "   6) Install Node-Red+Authentication "
	echo "   7) Install InfluxDB "
	echo "   8) Install CouchDB "
	echo "   9) Install Grafana "
	echo "  10) Install OpenTSDB "
	echo "  11) Install ELK "
	echo "  12) Install OpenVPN "
	echo "  13) Install Jasper Server "
	echo "  14) Install Android SDK "
	echo "  20) Install Devtools "
	echo "  30) Exit"
	echo ""
	read -p "Select an option [1-30]: " option
	echo ""
	case $option in
	1)
		while :; do
			clear
			#!/bin/sh
			echo ""
			echo ""
			cat <<'EOF'
███╗   ██╗ ██████╗ ██████╗ ███████╗     ██╗███████╗
████╗  ██║██╔═══██╗██╔══██╗██╔════╝     ██║██╔════╝
██╔██╗ ██║██║   ██║██║  ██║█████╗       ██║███████╗
██║╚██╗██║██║   ██║██║  ██║██╔══╝  ██   ██║╚════██║
██║ ╚████║╚██████╔╝██████╔╝███████╗╚█████╔╝███████║
╚═╝  ╚═══╝ ╚═════╝ ╚═════╝ ╚══════╝ ╚════╝ ╚══════╝                                                                                               
EOF
			echo ""
			echo ""
			echo "   1) Install Nodejs version 6.x? "
			echo "   2) Install Nodejs version 8.x? "
			echo "   3) Install Nodejs version 9.x? "
			echo "   4) exit"
			echo ""
			read -p "Select an option [1-4]: " option
			echo ""
			case $option in
			1)
				read -p "Do you want to install Nodejs 6.x? [y/n]: " -e -i n SETUPNODE
				if [[ "$SETUPNODE" == 'y' ]]; then
					if [[ -e /usr/bin/node ]]; then
						echo "Looks like nodejs is already installed"
						echo ""
					elif [[ ! -e /usr/bin/node ]]; then
						rm -f /etc/yum.repos.d/nodesource-el*
						yum clean all && rm -rf /var/cache/yum
						curl --silent --location https://rpm.nodesource.com/setup_6.x | sudo bash -
						yum -y install nodejs
						cd /usr/lib && npm install iron-meteor pm2
					fi
				fi
				exit
				;;
			2)
				read -p "Do you want to install Nodejs 8.x? [y/n]: " -e -i n SETUPNODE
				if [[ "$SETUPNODE" == 'y' ]]; then
					if [[ -e /usr/bin/node ]]; then
						echo "Looks like nodejs is already installed"
						echo ""
					elif [[ ! -e /usr/bin/node ]]; then
						rm -f /etc/yum.repos.d/nodesource-el*
						yum clean all && rm -rf /var/cache/yum
						curl --silent --location https://rpm.nodesource.com/setup_8.x | sudo bash -
						yum -y install nodejs
						cd /usr/lib && npm install iron-meteor pm2
					fi
				fi
				exit
				;;
			3)
				read -p "Do you want to install Nodejs 9.x? [y/n]: " -e -i n SETUPNODE
				if [[ "$SETUPNODE" == 'y' ]]; then
					if [[ -e /usr/bin/node ]]; then
						echo "Looks like nodejs is already installed"
						echo ""
					elif [[ ! -e /usr/bin/node ]]; then
						rm -f /etc/yum.repos.d/nodesource-el*
						yum clean all && rm -rf /var/cache/yum
						curl --silent --location https://rpm.nodesource.com/setup_9.x | sudo bash -
						yum -y install nodejs
						cd /usr/lib && npm install iron-meteor pm2
					fi
				fi
				exit
				;;
			4)
				sh myh
				exit
				;;

			esac
		done

		exit
		;;
	2)
		read -p "Do you want to install Meteor? [y/n]: " -e -i n SETUPMETEOR
		if [[ "$SETUPMETEOR" == 'y' ]]; then
			if [[ -e /usr/local/bin/meteor ]]; then
				echo "Looks like Meteor is already installed"
				echo ""
				exit
			fi
			curl https://install.meteor.com/ | sh
			useradd meteor
		fi
		echo ""
		exit
		;;
	3)
		while :; do
			clear
			#!/bin/sh
			echo ""
			echo ""
			cat <<'EOF'
███╗   ███╗ ██████╗ ███╗   ██╗ ██████╗  ██████╗ 
████╗ ████║██╔═══██╗████╗  ██║██╔════╝ ██╔═══██╗
██╔████╔██║██║   ██║██╔██╗ ██║██║  ███╗██║   ██║
██║╚██╔╝██║██║   ██║██║╚██╗██║██║   ██║██║   ██║
██║ ╚═╝ ██║╚██████╔╝██║ ╚████║╚██████╔╝╚██████╔╝
╚═╝     ╚═╝ ╚═════╝ ╚═╝  ╚═══╝ ╚═════╝  ╚═════╝                                                                                           
EOF
			echo ""
			echo ""
			echo "   1) Install MongoDB version 3.4? "
			echo "   2) Install MongoDB version 3.6? "
			echo "   3) Install MongoDB version 4.0? "
			echo "   4) Enable Admin Authentication"
			echo "   5) Create MongoDB User"
			echo "   6) exit"
			echo ""
			read -p "Select an option [1-6]: " option
			echo ""
			case $option in
			1)
				read -p "Do you want to install MongoDB-3.4? [y/n]: " -e -i n SETUPMONGO
				if [[ "$SETUPMONGO" == 'y' ]]; then
					if [[ -e /usr/bin/mongo ]]; then
						echo "Looks like MongoDB is already installed"
						echo ""
						exit
					fi
					sed -i 's/SELINUX=permissive/SELINUX=disabled/g' /etc/selinux/config
					sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
					setenforce 0
					echo [mongodb-org-3.4] >/etc/yum.repos.d/mongodb-org-3.4.repo
					echo name=MongoDB Repository >>/etc/yum.repos.d/mongodb-org-3.4.repo
					echo baseurl=https://repo.mongodb.org/yum/redhat/\$releasever/mongodb-org/3.4/x86_64/ >>/etc/yum.repos.d/mongodb-org-3.4.repo
					echo gpgcheck=1 >>/etc/yum.repos.d/mongodb-org-3.4.repo
					echo enabled=1 >>/etc/yum.repos.d/mongodb-org-3.4.repo
					echo gpgkey=https://www.mongodb.org/static/pgp/server-3.4.asc >>/etc/yum.repos.d/mongodb-org-3.4.repo
					yum install mongodb-org -y
					service mongod start
					chkconfig mongod on
				fi
				exit
				;;
			2)
				read -p "Do you want to install MongoDB-3.6? [y/n]: " -e -i n SETUPMONGO
				if [[ "$SETUPMONGO" == 'y' ]]; then
					if [[ -e /usr/bin/mongo ]]; then
						echo "Looks like MongoDB is already installed"
						echo ""
						exit
					fi
					sed -i 's/SELINUX=permissive/SELINUX=disabled/g' /etc/selinux/config
					sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
					setenforce 0
					echo [mongodb-org-3.6] >/etc/yum.repos.d/mongodb-org-3.6.repo
					echo name=MongoDB Repository >>/etc/yum.repos.d/mongodb-org-3.6.repo
					echo baseurl=https://repo.mongodb.org/yum/redhat/\$releasever/mongodb-org/3.6/x86_64/ >>/etc/yum.repos.d/mongodb-org-3.6.repo
					echo gpgcheck=1 >>/etc/yum.repos.d/mongodb-org-3.6.repo
					echo enabled=1 >>/etc/yum.repos.d/mongodb-org-3.6.repo
					echo gpgkey=https://www.mongodb.org/static/pgp/server-3.6.asc >>/etc/yum.repos.d/mongodb-org-3.6.repo
					yum install mongodb-org -y
					service mongod start
					chkconfig mongod on
				fi
				exit
				;;

			3)
				read -p "Do you want to install MongoDB-4.0? [y/n]: " -e -i n SETUPMONGO
				if [[ "$SETUPMONGO" == 'y' ]]; then
					if [[ -e /usr/bin/mongo ]]; then
						echo "Looks like MongoDB is already installed"
						echo ""
						exit
					fi
					sed -i 's/SELINUX=permissive/SELINUX=disabled/g' /etc/selinux/config
					sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
					setenforce 0
					echo [mongodb-org-4.0] >/etc/yum.repos.d/mongodb-org-4.0.repo
					echo name=MongoDB Repository >>/etc/yum.repos.d/mongodb-org-4.0.repo
					echo baseurl=https://repo.mongodb.org/yum/redhat/\$releasever/mongodb-org/4.0/x86_64/ >>/etc/yum.repos.d/mongodb-org-4.0.repo
					echo gpgcheck=1 >>/etc/yum.repos.d/mongodb-org-4.0.repo
					echo enabled=1 >>/etc/yum.repos.d/mongodb-org-4.0.repo
					echo gpgkey=https://www.mongodb.org/static/pgp/server-4.0.asc >>/etc/yum.repos.d/mongodb-org-4.0.repo
					yum install mongodb-org -y
					service mongod start
					chkconfig mongod on
				fi
				exit
				;;
			4)
				read -p "Set Admin Password: " -e SETPASS
				mongo --eval "db.createUser({user:"admin",pwd:"secret", roles:[{role:"root",db:"admin"}]});"
				mongo --eval "db.createUser({ user: "admin", pwd: \"$SETPASS\", roles: [{ role: "root", db: "admin" },] });"
				if grep -qs "#security:" "/etc/mongod.conf"; then
					sed -i 's/#security:/security: \n authorization: enabled/g' /etc/mongod.conf
				    service mongod restart
				fi
				exit
				;;
			5)
				#CreateUser and CreateDB
				read -p "Create User: " -e CREUSER
				read -p "Set Login Password: " -e SETPASS
				read -p "Create db Name: " -e CREDB
				read -p "Set User Role: " -e -i readWrite SETROLE
				mongo --eval "db.createUser({ user: \"$CREUSER\", pwd: \"$SETPASS\", roles: [{ role: \"$SETROLE\", db: \"$CREDB\" },] });"
				mongo $CREDB --eval 'db.test.insert({"name" : "Test insert"});'
				if grep -qs "#security:" "/etc/mongod.conf"; then
					sed -i 's/#security:/security: \n authorization: enabled/g' /etc/mongod.conf
				    service mongod restart
				fi
				exit
				;;
			6)
				sh myh
				exit
				;;
			esac
		done
		exit
		;;
	4)
		while :; do
			clear
			#!/bin/sh
			echo ""
			echo ""
			cat <<'EOF'
███╗   ███╗ ██████╗ ███╗   ██╗ ██████╗  ██████╗     ███████╗████████╗██╗   ██╗██████╗ ██╗ ██████╗ 
████╗ ████║██╔═══██╗████╗  ██║██╔════╝ ██╔═══██╗    ██╔════╝╚══██╔══╝██║   ██║██╔══██╗██║██╔═══██╗
██╔████╔██║██║   ██║██╔██╗ ██║██║  ███╗██║   ██║    ███████╗   ██║   ██║   ██║██║  ██║██║██║   ██║
██║╚██╔╝██║██║   ██║██║╚██╗██║██║   ██║██║   ██║    ╚════██║   ██║   ██║   ██║██║  ██║██║██║   ██║
██║ ╚═╝ ██║╚██████╔╝██║ ╚████║╚██████╔╝╚██████╔╝    ███████║   ██║   ╚██████╔╝██████╔╝██║╚██████╔╝
╚═╝     ╚═╝ ╚═════╝ ╚═╝  ╚═══╝ ╚═════╝  ╚═════╝     ╚══════╝   ╚═╝    ╚═════╝ ╚═════╝ ╚═╝ ╚═════╝                                                                                                                          
EOF
			echo ""
			echo "   1) Install Mongo Studio? "
			echo "   2) Run Docker Container? "
			echo "   3) exit"
			echo ""
			read -p "Select an option [1-3]: " option
			echo ""
			case $option in
			1)
				read -p "Do you want to Mongo Studio? [y/n]: " -e -i n SETUPMST
				if [[ "$SETUPMST" == 'y' ]]; then
					if [[ -e /usr/bin/node ]]; then
						echo "Looks like nodejs is already installed"
						echo ""
					elif [[ ! -e /usr/bin/node ]]; then
						rm -f /etc/yum.repos.d/nodesource-el*
						yum clean all && rm -rf /var/cache/yum
						curl --silent --location https://rpm.nodesource.com/setup_9.x | sudo bash -
						yum -y install nodejs
						npm install -g iron-meteor
						npm install -g pm2
					fi
					if [[ ! -e /usr/bin/java ]]; then
						yum install java-1.8.0-openjdk java-1.8.0-openjdk-devel -y
						echo export JAVA_HOME=/usr/lib/jvm/jre-1.8.0 >>/etc/profile
						source /etc/profile
					fi
					echo ""
					if [[ -e /opt/mongostudio ]]; then
						echo "Looks like MongoStudio is already installed."
						echo ""
					fi
					git clone https://github.com/myh-st/mongst.git /opt/mongostudio
					read -p "Set Login Password: " -e SETPASS
					sed -i "s/myh1993/$SETPASS/g" /opt/mongostudio/server.js
					pm2 start /opt/mongostudio/server.js --name mongostudio:3333
					pm2 startup && pm2 save
					if [[ -e /etc/sysconfig/iptables ]]; then
						sed -i '/-A INPUT -i lo -j ACCEPT/a -A INPUT -p tcp -m state --state NEW -m tcp --dport 3333 -j ACCEPT' /etc/sysconfig/iptables
						service iptables restart
						echo ""
						echo "MongoStudio running on port 3333"
						echo "Default Username: admin Password: $SETPASS"
					fi
				fi
				echo ""
				exit
				;;
			2)
				read -p "Run MongoStudio in Docker Container? [y/n]: " -e -i n SETUPMST
				if [[ "$SETUPMST" == 'y' ]]; then
				yum install epel-release -y && yum install docker -y
				service docker start && chkconfig docker on
				docker run -it -d --restart=always --hostname mongostudio -p 3333:3333 --name mongost muyahid/mongost:lastes /sbin/init
					if [[ -e /etc/sysconfig/iptables ]]; then
						sed -i '/-A INPUT -i lo -j ACCEPT/a -A INPUT -p tcp -m state --state NEW -m tcp --dport 3333 -j ACCEPT' /etc/sysconfig/iptables
						service iptables restart
						echo ""
						echo "Connect to mongo 172.17.0.1:27017 or $IP:27017"
						echo "MongoStudio running on port 3333"
						echo "User: admin Password: 1234"
						echo ""
					fi
				fi
				exit
				;;
			3)
				sh myh
				exit
				;;

			esac
		done
		exit
		;;
	5)
		while :; do
			clear
			#!/bin/sh
			echo ""
			echo ""
			cat <<'EOF'
██████╗  ██████╗  ██████╗██╗  ██╗███╗   ███╗ ██████╗ ███╗   ██╗ ██████╗  ██████╗ 
