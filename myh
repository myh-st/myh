					sed -i '46s/.*/tsd.storage.fix_duplicates = true/' /etc/opentsdb/opentsdb.conf
					tsdtmp=${TMPDIR-'/tmp'}/tsd
					mkdir -p "$tsdtmp"
					service opentsdb start
					chkconfig opentsdb on
				fi
